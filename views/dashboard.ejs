

<div class="mt-4 mb-5">
    <h4>Adicionar Recurso</h4>
    <form action="/recursos/adicionar" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" required>
        </div>
        <div class="form-group">
            <label for="tipo">Tipo</label>
            <input type="text" class="form-control" id="tipo" name="tipo" required>
        </div>
        <div class="form-group">
            <label for="quantidade">Quantidade</label>
            <input type="number" class="form-control" id="quantidade" name="quantidade" required>
        </div>
        <div class="form-group">
            <label for="descricao">Descrição</label>
            <textarea class="form-control" id="descricao" name="descricao" required></textarea>
        </div>
        <div class="form-group">
            <label for="imagem">Imagem</label>
            <input type="file" name="imagem" accept="image/*" required> 
        </div>
        
        <button type="submit" class="btn btn-primary">Adicionar</button>
    </form>
</div>


<h2 class="mt-4 mb-5 text-sm-center ">Dashboard</h2>

<h3>Recursos:</h3>
<section class="row" id="section-equipamentos">
    <% recursos.forEach(recurso => { %>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                     <img src="/uploads/<%= recurso.imagem %>" class="card-img-top img-fluid" style="max-height: 200px; object-fit: cover;"> <!-- Adicionando a imagem -->

                    <h5 class="card-title"><%= recurso.nome %></h5>
                    <p class="card-text">Tipo: <%= recurso.tipo %></p>
                    <p class="card-text">Quantidade: <%= recurso.quantidade %></p>
                    <a href="/recursos/editar/<%= recurso.id %>" class="btn btn-warning">Editar</a>
                    <form action="/recursos/deletar/<%= recurso.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja deletar este recurso?');">Deletar</button>
                    </form>
                </div>
            </div>
        </div>
    <% }) %>
</section>

