<h2>Editar Recurso</h2>
<form action="/recursos/editar/<%= recurso.id %>" method="POST">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" name="nome" value="<%= recurso.nome %>" required>
    
    <label for="tipo">Tipo:</label>
    <input type="text" id="tipo" name="tipo" value="<%= recurso.tipo %>" required>
    
    <label for="quantidade">Quantidade:</label>
    <input type="number" id="quantidade" name="quantidade" value="<%= recurso.quantidade %>" required>
    
    <button type="submit">Salvar Alterações</button>
</form>
<a href="/dashboard">Cancelar</a>
